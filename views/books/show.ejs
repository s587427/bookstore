<h2>瀏覽: <%= book.title %></h2>

<div>
    <img src="<%= book.coverImagePath %>">
    <a href="/books/<%= book.id %>/edit">編輯</a>
    <%- include('../partials/deleteForm', {url: `/books/${book.id}`}) %>
    <a href="/books/<%= book.author %>">瀏覽作者</a>
</div>

<div>
    <label for="">作者:</label> <%= author.name %>
    <label for="">出版日期:</label>  <%= book.publishDate %>
    <label for="">頁數:</label>  <%= book.pageCount %>
    <label for="">描述:</label>  <%= book.description %>
</div>