<div class="book-form">

    <div class="book-form-row">
        <div>
            <label class="search-label">標題</label>
            <input class="input-main" type="text" name="title" value="<%= book.title %>">
        </div>
        <div>
            <label class="search-label">作者</label>
            <select class="select-main" name="author" id="author">
                <% authors.forEach(author=> { %>
                    <% if(author.id === book.author){ %>
                        <option selected label="<%= author.name %>" value="<%= author.id %>"></option>
                    <% } else { %>
                        <option label="<%= author.name %>" value="<%= author.id %>"></option>
                    <% } %>
                <% }) %>
            </select>
        </div>
    </div>
    
    <div class="book-form-row">
        <div>
            <label class="search-label">出版日期</label>
            <input class="input-main" type="date" name="publishDate" value="<%= book.publishDate ? book.publishDate.toISOString().split('T')[0] : "" %>">
        </div>
        
        <div>
            <label class="search-label">頁數</label>
            <input class="input-main" type="number" name="pageCount" id="pageCount" min="1" value="<%= book.pageCount ?  book.pageCount : '1'  %>">
        </div>
    </div>
    
    <div class="book-form-row">
        <div>
            <label class="search-label">封面</label>
            <input type="file" class="filepond input-main" name="coverImageName">
        </div>
        
        <div>
            <label class="search-label">描述</label>
            <textarea class="textarea-main" name="description" id="description" cols="30" rows="10"><%= book.description %></textarea>
        </div>
    </div>
</div>

