<div class="book-form">

    <div class="book-form-row">
        <div>
            <label class="form-label">書籍名稱</label>
            <input class="form-input" type="text" name="title" value="<%= book.title %>">
        </div>
        <div>
            <label class="form-label">作者</label>
            <select class="form-select" name="author" id="author">
                <% authors.forEach(author=> { %>
                    <% if(author.id === book.author?.toString()){ %>
                        <option selected label="<%= author.name %>" value="<%= author.id %>"></option>
                    <% } else { %>
                        <option label="<%= author.name %>" value="<%= author.id %>"></option>
                    <% } %>
                <% }) %>
            </select>
        </div>
    </div>
    
    <div class="book-form-row">
        <div>
            <label class="form-label">出版日期</label>
            <input class="form-input" type="date" name="publishDate" value="<%= book.publishDate ? book.publishDate.toISOString().split('T')[0] : "" %>">
        </div>
        
        <div>
            <label class="form-label">頁數</label>
            <input class="form-input" type="number" name="pageCount" id="pageCount" min="1" value="<%= book.pageCount ?  book.pageCount : '1'  %>">
        </div>
    </div>
    
    <div class="book-form-row" style="display: flex; justify-content: space-between;">
        <div>
            <label class="form-label">封面</label>
            <input type="file" class="filepond form-input" name="coverImageName">
        </div>
        <div>
            <label class="form-label">描述</label>
            <textarea class="form-textarea" name="description" id="description" cols="30" rows="10"><%= book.description %></textarea>
        </div>
    </div>
    
</div>
